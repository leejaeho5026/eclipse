<?xml version="1.0" encoding="UTF-8"?>


<web-app version="4.0" 
		 xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee                       
		 					 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

	<!-- 현재 web application에서 받아들이는 모든 요청에 대해서
		apServlet이라는 이름으로 정의된 Servlet을 사용한다는 의미
	  -->
    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

	<!-- 요청 정보(URL)를 분석해서 Controller를 선택하는 Servlet 지정하기 -->
	<servlet>
        <servlet-name>appServlet</servlet-name>
        <!-- Spring MVC에서 제공하는 기본 Servlet 지정하기 -->
        <servlet-class>org.spingfameowrk.web.servlet.DispatcherServlet</servlet-class>
        <!-- Spring MVC 설저을 위한 xml파일 지정하기 -->
        <init-param>
        	<param-name>ontextConfigLocation</param-name>
        	<param-value>/WEB-INF/config/servlet-context.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

	<!-- Bean(스프링이 자동으로 생성해주는 객체) 을 정의하는 xml파일 지정하기 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/config/root-context.xml</param-value>
	</context-param>
 
 	<!-- lstener 설정하기 -->
 	<listener>
 		<listener-class>org.springframwork.web.context.ContextLoaderlistener</listener-class>
 	</listener>
 	
 	<!--  Parameter Encoding Filter 설정하기: 한글처리 -->
 	<filter>
 		<filter-name>endcodingFilter</filter-name>
 		<filter-class>org.springramework.web.filter.CharacterEncodingFilter</filter-class>
 		<init-param>
 			<param-name>encoding</param-name>
 			<param-value>UTF-8</param-value>
 		</init-param> <!-- init은 초기화라고 생각하면 됨 -->
 		<init-param>
 			<param-name>forceEncoding</param-name>
 			<param-value>true</param-value>
 		</init-param>
 	</filter>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>










</web-app>
